<div class="box">
	<%= link_to (image_tag pin.image(:medium)), pin %>
	<p>
		<%= pin.description %>
	</p>
	<p class="description">
		<strong>
			Posted by <%= pin.user.name %>
		</strong>
	</p>
	<p>
		<% if current_user == pin.user %>
		<%= link_to 'Editar', edit_pin_path(pin) %>
		<%= link_to 'Deletar', pin, method: :delete, data: { confirm: 'Tem certeza?' } %>
	<% end %>
	</p>
</div>